{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "date", "title", "summary", "tags"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Unique identifier (lowercase with hyphens)"
    },
    "date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Date in YYYY-MM-DD format"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "News headline"
    },
    "summary": {
      "type": "string",
      "minLength": 1,
      "maxLength": 500,
      "description": "Brief summary of the news"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "new-card",
          "discontinued",
          "bonus-change",
          "fee-change",
          "benefit-change",
          "limited-time",
          "policy-change",
          "general"
        ]
      },
      "minItems": 1,
      "description": "Tags categorizing the news"
    },
    "bank": {
      "type": "string",
      "description": "Related bank name (optional)"
    },
    "card_slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "Related card slug for linking (optional, use card_slugs for multiple)"
    },
    "card_name": {
      "type": "string",
      "description": "Related card display name (optional, use card_names for multiple)"
    },
    "card_slugs": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "description": "Related card slugs for linking multiple cards (optional)"
    },
    "card_names": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related card display names for multiple cards (optional)"
    },
    "source": {
      "type": "string",
      "description": "Source name (optional)"
    },
    "source_url": {
      "type": "string",
      "format": "uri",
      "description": "Source URL (optional)"
    },
    "body": {
      "type": "string",
      "maxLength": 15000,
      "description": "Full article body in markdown (optional)"
    }
  }
}
