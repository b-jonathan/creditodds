{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "bank", "slug", "accepting_applications"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name of the credit card"
    },
    "bank": {
      "type": "string",
      "description": "Issuing bank or financial institution"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-friendly identifier (lowercase, hyphens only)"
    },
    "image": {
      "type": "string",
      "description": "Filename of the card image (optional)"
    },
    "accepting_applications": {
      "type": "boolean",
      "description": "Whether the card is currently accepting new applications"
    },
    "category": {
      "type": "string",
      "enum": ["travel", "cashback", "business", "student", "secured", "rewards", "other"],
      "description": "Card category (optional)"
    },
    "annual_fee": {
      "type": "number",
      "minimum": 0,
      "description": "Annual fee in USD (optional)"
    },
    "release_date": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Card release date in YYYY-MM-DD format (optional)"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["travel", "cashback", "hotel", "shopping", "student", "secured", "premium", "business", "rewards", "airline", "dining"]
      },
      "description": "Card tags for categorization and filtering (optional)"
    },
    "apply_link": {
      "type": "string",
      "format": "uri",
      "description": "Direct application URL for the card (optional)"
    },
    "card_referral_link": {
      "type": "string",
      "format": "uri",
      "description": "Base URL for referral links - user codes are appended to this (optional)"
    }
  },
  "additionalProperties": false
}
